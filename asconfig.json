{
  "targets": {
    "debug": {
      "outFile": "build/debug.wasm",
      "textFile": "build/debug.wat",
      "sourceMap": true,
      "debug": true
    },
    "release": {
      "outFile": "build/release.wasm",
      "textFile": "build/release.wat",
      "sourceMap": true,
      "optimizeLevel": 3,
      "shrinkLevel": 0,
      "converge": false,
      "noAssert": false
    },
    "wasi": {
      "extends": "./node_modules/as-wasi/bindings.json",
      "outFile": "build/wasi.wasm",
      "textFile": "build/wasi.wat"
    }
  },
  "options": {
    "bindings": "esm"
  }
}